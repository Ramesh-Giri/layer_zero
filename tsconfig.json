{
  "exclude": [
    "node_modules"
  ],
  "include": [
    "deploy",
    "tasks",
    "test",
    "hardhat.config.ts",
    "src/**/*",
    "whale_token/**/*",    
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}